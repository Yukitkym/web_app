<% provide(:title, "Edit post") %>
<% provide(:url, post_path) %>
<% provide(:button_text, 'Save changes') %>
<h1>Update your post</h1>
<div class="row">
  <div class="col-md-6">
    <%= render 'form' %>
  </div>
  <div class="col-md-6">
  	<div class="post_show_picture">
  <%= image_tag @post.picture.url, :alt => "", :width => "320", :height => "200", :class => "alignnone size-medium wp-image-986 photravel-picture" %>
</div>
<div class="post_info">
  <h1 class="post_title"><span class="content">《<%= @post.content %>》</span></h1>
  <span class="place">Place: <%= @post.place %></span>
  <div style="margin-left: 10px;">
    <div class="post_info_user">
      <%= link_to gravatar_for(@post.user, size: 30), @post.user %>
      <a href="<%= user_path(id: @post.user_id) %>" class="hover-color-to-user">
        <span class="post-user"><%= @post.user.name %></span>
      </a>
    </div>
    <div class="post_info_other">
      <span class="timestamp">Posted <%= time_ago_in_words(@post.created_at) %> ago.</span>
      <% if logged_in? %>
        <% if current_user?(@post.user) || current_user.admin %>
          <%= link_to "edit", edit_post_path %>
          <%= link_to "delete", @post, method: :delete,
                                         data: { confirm: "You sure?" },
                                        :class => "delete_botton" %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
  </div>
</div>
